<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Block direct access to sensitive deployment/server files.
  RewriteRule (^|/)(\.ftp-deploy-sync-state\.json|\.htaccess)$ - [F,L,NC]

  # If the request is for an existing file or directory, serve it directly.
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, route all requests to index.html (SPA fallback).
  RewriteRule ^ index.html [L]
</IfModule>
